{
  "id": null,
  "title": "Flask Application Monitoring",
  "tags": ["flask", "prometheus", "devops"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [

    {
      "type": "stat",
      "title": "Total Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(flask_http_request_total)",
          "legendFormat": "requests"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 3
      }
    },

    {
      "type": "stat",
      "title": "5xx Errors",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(flask_http_request_total{status=\"500\"})"
        }
      ],
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 3
      }
    },

    {
      "type": "stat",
      "title": "4xx Errors",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(flask_http_request_total{status=\"404\"})"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 3
      }
    },

    {
      "type": "graph",
      "title": "Requests by Status Code",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (status) (rate(flask_http_request_total[1m]))",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 6
      }
    },

    {
      "type": "graph",
      "title": "Request Duration (Latency)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(flask_http_request_duration_seconds_bucket[1m])) by (le))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(flask_http_request_duration_seconds_bucket[1m])) by (le))",
          "legendFormat": "Median"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 6
      }
    },

    {
      "type": "graph",
      "title": "Requests per Endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(flask_http_request_total[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 24,
        "h": 6
      }
    }
  ]
}
